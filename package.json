{
  "name": "react-native-maui",
  "version": "0.0.4",
  "description": "React Native UI Library",
  "main": "src/index",
  "scripts": {
    "expo-publish": "cd example && expo publish",
    "npm-publish": "./script/npm-publish.sh",
    "test": "jest",
    "testc": "jest --coverage",
    "testu": "jest --updateSnapshot",
    "lint": "eslint . --ext .ts,.tsx",
    "lintfix": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "files": [
    "src"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@react-native-community/eslint-config": "^3.0.3",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/react-native": "^9.1.0",
    "@types/jest": "^27.5.1",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.66.13",
    "babel-jest": "^28.1.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-expo": "^45.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-dom": "17.0.2",
    "react-native": "0.73.6",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-svg": "14.1.0",
    "typescript": "~4.3.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "react-native-gesture-handler": ">= 2.0.0",
    "react-native-reanimated": ">=2.0.0",
    "react-native-svg": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahaaoo/react-native-maui.git"
  },
  "author": "mahaaoo <mahao9393@163.com> (https://github.com/mahaaoo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mahaaoo/react-native-maui/issues"
  },
  "homepage": "https://github.com/mahaaoo/react-native-maui#readme",
  "jest": {
    "preset": "jest-expo",
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ]
  },
  "setupFilesAfterEnv": [
    "@testing-library/jest-native/extend-expect"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "example/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "metro-react-native-babel-preset": "^0.77.0"
  }
}
